<h1>Surveys</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= link_to survey.title, user_survey_url(@current_user, survey) %></td>
        <td><%= link_to '✎ Edit', edit_user_survey_path(@current_user, survey) %></td>
        <td><%= link_to '♻︎ Del', user_survey_url(@current_user, survey), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_user_survey_path %>
