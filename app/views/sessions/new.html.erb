<div class="signin-form">
  <h1>Sign In</h1>
  <%= form_for(:session, :url => {:controller => 'sessions', :action => 'create'}) do |f| %>
    <p>Username: <br /> <%= f.text_field :username %></p>
    <p>Password: <br /> <%= f.password_field :password %></p>
    <%= f.submit "Sign In!" %>
  <% end %>
</div>
