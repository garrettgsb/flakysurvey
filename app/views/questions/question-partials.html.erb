<!--
CHOOSE QUESTION TYPE
-->
<div class="question-area">
  <h3>Choose Question Type:</h3>
  <div id="choose" class="text-question-input question-input">
    <h3>What type of question is this?</h3>
    <div class="card" id="choose-text">
      Text
    </div>
    <div class="card" id="choose-single">
      Multiple Choice; Single Select
    </div>
    <div class="card" id="choose-multi">
      Multiple Choice; Multi Select
    </div>
  </div>
</div>

<!--
TEXT QUESTION
-->
<div class="question-area">
  <h3>Text Question:</h3>
  <div id="text" class="text-question-input question-section">
      <span>Prompt:</span>
      <input name="" class="question-prompt" type="text" placeholder="What are some of the best things?">
    <div class="question-input">
      <span>Placeholder Text:</span>
      <input name="" class="question-placeholder" type="text" placeholder="Please list no more than three types of motorcycles.">
    </div>
    <input type="hidden" class="question-type" value="text">
  </div>
  <div class="text-question-preview question-preview">
  </div>
</div>

<!--
SINGLE SELECT QUESTION
-->
<div class="question-area">
  <h3>Single-Select Question:</h3>
  <div id="single" class="single-select-question-input question-section">
    <span>Prompt:</span>
    <input class="question-prompt" type="text" placeholder="Do you like blue?">
    <div class="question-input">
      <span>Choices:</span>
      <label>
        <input type="radio" class="radio" name="1" />
        <input type="text" class="radio-label" placeholder="Blue is rad!">
      </label>
      <label>
        <input type="radio" name="1" />
        <input type="text" class="radio-label" placeholder="Blue doesn't do it for me.">
      </label>
      <span class="add-option-single">➕ Add option</span>
      <input type="hidden" class="question-type" value="single">
    </div>
  </div>
</div>

<!--
MULTI SELECT QUESTION
-->
<div class="question-area">
  <h3>Multiple-Select Question:</h3>
  <div id="multi" class="multi-select-question">
    <div id="multi" class="multi-select-question-input question-section">
      <span>Prompt:</span>
        <input class="question-prompt" type="text" placeholder="Which stars are good stars?">
      <div class="question-input">
        <span>Choices:</span>
        <label>
          <input type="checkbox" class="checkbox" name="1" />
          <input type="text" class="checkbox-label" placeholder="Sirius is pretty good.">
        </label>
        <label>
          <input type="checkbox" name="1" />
          <input type="text" class="checkbox-label" placeholder="Polaris is nice.">
        </label>
        <span class="add-option-multi">➕ Add option</span>
        <input type="hidden" class="question-type" value="multi">
    </div>
  </div>
</div>

