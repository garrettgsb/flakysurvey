<div class="question-area">
  <h3>Choose Question Type:</h3>
  <div id="choose" class="text-question-input question-input">
    <h3>What type of question is this?</h3>
    <div class="card" id="choose-text">
      Text
    </div>
    <div class="card" id="choose-single">
      Multiple Choice; Single Select
    </div>
    <div class="card" id="choose-multi">
      Multiple Choice; Multi Select
    </div>
  </div>
</div>
<div class="question-area">
  <h3>Text Question:</h3>
  <div id="text" class="text-question-input question-input">
      <span>Prompt:</span>
      <input class="question-prompt" type="text" placeholder="What are some of the best things?">
    <div class="question-section">
      <span>Placeholder Text:</span>
      <input class="question-placeholder" type="text" placeholder="Please list no more than three types of motorcycles.">
    </div>
  </div>
  <div class="text-question-preview question-preview">
  </div>
</div>

<div class="question-area">
  <h3>Single-Select Question:</h3>
  <div id="single" class="single-select-question-input question-input">
    <span>Prompt:</span>
    <input class="question-prompt" type="text" placeholder="Do you like blue?">
    <div class="question-section">
      <span>Choices:</span>
      <label>
        <input type="radio" name="1" />
        <input type="text" class="radio-label" placeholder="Blue is rad!">
      </label>
      <label>
        <input type="radio" name="1" />
        <input type="text" class="radio-label" placeholder="Blue doesn't do it for me.">
      </label>
      <span class="add-option" onclick="alert(`No don't.`)">➕ Add option</span>
    </div>
  </div>
</div>

<div class="question-area">
  <h3>Multiple-Select Question:</h3>
  <div id="multi" class="multi-select-question">
    <div id="multi" class="multi-select-question-input question-input">
      <span>Prompt:</span>
        <input class="question-prompt" type="text" placeholder="Which stars are good stars?">
      <div class="question-section">
        <span>Choices:</span>
        <label>
          <input type="checkbox" name="1" />
          <input type="text" class="checkbox-label" placeholder="Sirius is pretty good.">
        </label>
        <label>
          <input type="checkbox" name="1" />
          <input type="text" class="checkbox-label" placeholder="Polaris is nice.">
        </label>
        <span class="add-option" onclick="alert(`No don't.`)">➕ Add option</span>
    </div>
  </div>
</div>
